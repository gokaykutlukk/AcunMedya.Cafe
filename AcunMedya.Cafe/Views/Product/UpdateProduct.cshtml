@model AcunMedya.Cafe.Entities.Product
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>UpdateProduct</h1>

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Ürün Güncelleme Sayfası </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Günceleme İşlemi</a></li>
                <li class="breadcrumb-item active" aria-current="page">Ürün</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="ProductId" />
                        <label>Ürün Adı</label>
                        <input type="text" asp-for="ProductName" class="form-control" />
                        <br />
                        <label>Ürün Görseli</label>
                        <img src="@Model.ImageUrl" style="height:75px;width:75px" />
                        <input type="file" asp-for="ImageFile" class="form-control" />
                        <input type="hidden" asp-for="ImageUrl" class="form-control" />
                        <br />
                        <label>Ürün Fiyatı</label>
                        <input type="text" asp-for="Price" class="form-control" />
                        <br />
                        <label>Ürün Açıklaması</label>
                        <input type="text" asp-for="Description" class="form-control" />
                        <br />
                        <br />
                        <select asp-for="CategoryId" asp-items="@ViewBag.v" class="form-control">
                            <option>Kategori Seçiniz</option>
                        </select>

                        <button class="btn btn-primary"> <i class="fa fa-save"> </i>  Kaydet </button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
