@model List<AcunMedya.Cafe.Entities.About>

<link href="c:/acunmedya.cafe/wwwroot/coffee-master/css/bootstrap.css" rel="stylesheet" />

@foreach (var x in Model)
{
    <section class="video-sec-area pb-100 pt-40" id="about">
        <div class="container">
            <div class="row justify-content-start align-items-center">

                <div class="col-lg-6">
                    <img class="img-fluid w-100" style="max-height: 400px; object-fit: cover;" src="~/images/kahveblog2.jpeg" alt="Kahve Blog">
                </div>

                <div class="col-lg-6 video-left">
                    <h6>@x.SubTitle</h6>
                    <h1>
                        @x.ShortDescription<br />
                    </h1>
                    <p><span>@x.Title</span></p>
                    <p>@x.Description</p>
                </div>

            </div>
        </div>
    </section>
}
