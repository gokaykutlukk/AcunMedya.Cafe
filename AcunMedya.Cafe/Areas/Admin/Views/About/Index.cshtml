@model List<AcunMedya.Cafe.Entities.About>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Hakkımızda Tablsou </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Tablo</a></li>
                <li class="breadcrumb-item active" aria-current="page">Hakkımızda</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Alt Başlık</th>
                                <th>Açıklama</th>
                                <th>Güncelle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.AboutId</td>
                                    <td>@item.Title</td>
                                    <td>@item.SubTitle</td>
                                    <td style="max-width: 300px; word-wrap: break-word; white-space: normal;">
                                        @item.Description
                                    </td>

                                    <td><a href="/Admin/About/UpdateAbout/@item.AboutId" class="badge badge-info">Güncelle</a></td>
                                    <td><a href="/Admin/About/DeleteAbout/@item.AboutId" class="badge badge-danger">Sil</a></td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    <a href="/Admin/About/AddAbout" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Ekle</a>
                </div>
            </div>
        </div>

    </div>
</div>