@model AcunMedya.Cafe.Entities.Adress


@{
    ViewData["Title"] = "UpdateAdresses";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}




<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Adres Güncelleme Tablsou </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Tablo</a></li>
                <li class="breadcrumb-item active" aria-current="page">Adress</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="AdressId" class="form-control" />
                        <label>Hafta içi Saati</label>
                        <input type="text" asp-for="WeekendHours" class="form-control" />
                        <br />
                        <label>Hafta Sonu Saati</label>
                        <input type="text" asp-for="WeekdayHours" class="form-control" />
                        <br />
                        <label>Telefon</label>
                        <input type="text" asp-for="Phone" class="form-control" />

                        <br />
                        <button class="btn btn-primary"<i class="fa fa-save"></i> Kaydet</button>
                    </form>



                </div>
            </div>
        </div>

    </div>
</div>