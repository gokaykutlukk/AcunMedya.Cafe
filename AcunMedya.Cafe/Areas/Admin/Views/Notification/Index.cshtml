@model List<AcunMedya.Cafe.Entities.Notification>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            <i class="mdi mdi-bell-ring-outline text-primary me-2"></i> Gelen Bildirimler
        </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Tablo</a></li>
                <li class="breadcrumb-item active" aria-current="page">Gelen Bildirimler</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card shadow-sm rounded">
                <div class="card-body">
                    <h4 class="card-title text-gradient text-info">📬 Bildirim Listesi</h4>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="bg-gradient bg-info text-white">
                                <tr>
                                    <th>👤 Gönderen</th>
                                    <th>📝 Başlık</th>
                                    <th>💬 Mesaj</th>
                                    <th>📅 Tarih</th>
                                    <th>📌 Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.SenderName</td>
                                        <td><strong>@item.Title</strong></td>
                                        <td>@item.Message</td>
                                        <td>@item.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>
                                            @if (!item.IsRead)
                                            {
                                                <span class="badge bg-warning text-dark">
                                                    <i class="mdi mdi-email-alert-outline me-1"></i> Okunmadı
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">
                                                    <i class="mdi mdi-check-circle-outline me-1"></i> Okundu
                                                </span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


