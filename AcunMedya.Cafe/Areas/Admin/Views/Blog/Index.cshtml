@model List<AcunMedya.Cafe.Entities.Blog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Blog Tablsou </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Tablo</a></li>
                <li class="breadcrumb-item active" aria-current="page">Blog</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Açıklama</th>
                                <th>Resim</th>
                                <th>Tarih</th>
                        
                                <th>Güncelle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.BlogId</td>
                                    <td>@item.Title</td>
                                    <td style="max-width: 300px; word-wrap: break-word; white-space: normal;">
                                        @item.Description
                                    </td>
                                    <td> <img src ="@item.ImageUrl" /></td>
                                    <td>@item.Time</td>
                                    <td><a href="/Admin/Blog/UpdateBlog/@item.BlogId" class="badge badge-info">Güncelle</a></td>
                                    <td><a href="/Admin/Blog/DeleteBlog/@item.BlogId" class="badge badge-danger">Sil</a></td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    <br />
                    <a href="/Admin/Blog/AddBlog" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Blog Ekle</a>
                </div>
            </div>
        </div>

    </div>
</div>
