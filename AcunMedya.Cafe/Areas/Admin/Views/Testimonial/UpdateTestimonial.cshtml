@model AcunMedya.Cafe.Entities.Testimonial
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Müşteri Güncelleme Sayfası </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Güncelleme İşlemi</a></li>
                <li class="breadcrumb-item active" aria-current="page">Müşteriler</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <form asp-area="Admin" asp-controller="Testimonial" asp-action="UpdateTestimonial" method="post">
                        <input type="hidden" asp-for="TestimonialId" class="form-control" />
                        <label> Başlık</label>
                        <input type="text" asp-for="Title" class="form-control" />
                        <br />
                        <label>Açıklama</label>
                        <input type="text" asp-for="Description" class="form-control" />
                        <br />
                        <label> Puan</label>
                        <input type="text" asp-for="raiting" class="form-control" />
                        <br />
                        <label> Resim</label>
                        <input type="text" asp-for="ImageUrl" class="form-control" />
                        <br />
                        <button class="btn btn-primary"> <i class="fa fa-save"> </i>  Kaydet </button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
